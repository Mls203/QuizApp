@model QuizApp.Models.tbl_questions

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>StartExam</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />

    <script src="~/Scripts/modernizr-2.8.3.js"></script>


    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-1.9.1.min.js"></script>

    <script src="~/Scripts/bootstrap.min.js"></script>
    <style>
        .center {
            margin: auto;
            width: 60%;
            border: 3px solid #73AD21;
            padding-top: 30px;
            padding-left: 30px;
            padding-right: 30px;
            padding-bottom: 20px;
        }
    </style>
</head>
<body>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div>


            <div class="" style=" margin-top: 80px;">


                <div class="row container center" style=" background-color:lightgreen; margin-bottom:10px;">
                    <div class="row" style="  margin-bottom:10px;">
                        <b>@Html.DisplayFor(x => x.q_text)</b>
                    </div>


                    <input class="form-check-input" type="radio" name="answer" id="QA" value="A">
                    @Model.QA
                    <br />
                    <input class="form-check-input" type="radio" name="answer" id="QB" value="B">
                    @Model.QB
                    <br />
                    <input class="form-check-input" type="radio" name="answer" id="QC" value="C">
                    @Model.QC
                    <br />
                    <input class="form-check-input" type="radio" name="answer" id="QD" value="D">
                    @Model.QD
                    <br />


                    @*<div class="row form-check">
                            <h3>@Html.RadioButtonFor(x => x.QA, new { @class = "form-control" }) @Model.QA</h3>
                        </div>
                        <div class="row form-check" name="q">
                            <h3>@Html.RadioButtonFor(x => x.QB, new { @class = "form-control" }) @Model.QB</h3>
                        </div>
                        <div class="row form-check" name="q">
                            <h3>@Html.RadioButtonFor(x => x.QC, new { @class = "form-control" }) @Model.QC</h3>
                        </div>
                        <div class="row form-check" name="q">
                            <h3>@Html.RadioButtonFor(x => x.QD, new { @class = "form-control" }) @Model.QD</h3>
                        </div>*@
                    <div class="row" style="text-align:end; ">
                        <input type="submit" value="Next" class="btn btn-success" />
                    </div>

                </div>

            </div>

        </div>
    }


</body>
</html>
