﻿@model QuizApp.Models.student

@{
    ViewBag.Title = "SLogin";
    Layout = "~/Views/Shared/_LayoutPageLogin1.cshtml";
}

@*@if (ViewBag.msg != null)
    {
        <div class="alert alert-danger" role="alert" id="mesage">
            @ViewBag.msg
        </div>
    }*@

@using (Html.BeginForm("SLogin", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="width: 420px; height: 230px; margin-left: 70px; padding: 20px; background-color: #f3f3f3">
        <h4><b>Login As a Student</b></h4>



        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.std_name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.std_name, new { htmlAttributes = new { @PlaceHolder = "melisa", @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.std_name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.std_password, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.PasswordFor(model => model.std_password, new { @PlaceHolder = "12345678", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.std_password, "", new { @class = "text-danger" })
            </div>
        </div>

        @*<div class="form-group">
                @Html.LabelFor(model => model.std_image, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.std_image, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.std_image, "", new { @class = "text-danger" })
                </div>
            </div>*@

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </div>


        <div>
            <b>@Html.ActionLink("Register", "SRegister")</b>
        </div>

    </div>
}
