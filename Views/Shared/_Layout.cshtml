<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />

    <script src="~/Scripts/modernizr-2.8.3.js"></script>


    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    @*<script src="~/Scripts/jquery-3.6.4.min.js"></script>*@
    @*<script src="~/Scripts/jquery-3.0.0.min.js"></script>*@
    <script src="~/Scripts/jquery-1.9.1.min.js"></script>

    <script src="~/Scripts/bootstrap.min.js"></script>

    <style>
        .box:hover {
            color: red;
        }
    </style>


</head>
<body>

    <div class="row container " style="margin-left: 60px; margin-top:100px">
        <div class="col-lg-4 col-md-4 col-sm-4 " style="width: 310px; height: 55px; display: flex; justify-content: center; align-items: center;">
            <strong>@Html.ActionLink("Quiz App", "Index", "Home", new { area = "" }, new { @class = "box", style = "letter-spacing: 1px; font-size:50px;text-decoration:none; color:#f5e202" })</strong>
        </div>
    </div>

    <div class="row container " style="margin-left: 60px; margin-top:50px">
        <div class="col-lg-4 col-md-4 col-sm-4 " style="width: 300px; height: 50px; display: flex; justify-content: center; align-items: center;">
            <strong>@Html.ActionLink("Teacher Login", "TLogin", "Home", new { area = "" }, new { @class = "box", style = " font-size:30px;text-decoration:none; color:#f5e202" })</strong>
        </div>
    </div>

    <div class="row container " style="margin-left: 60px; margin-top:50px">
        <div class="col-lg-4 col-md-4 col-sm-4 " style="width: 300px; height: 50px; display: flex; justify-content: center; align-items: center;">
            <strong>@Html.ActionLink("Student Login", "SLogin", "Home", new { area = "" }, new { @class = "box", style = " font-size:30px;text-decoration:none; color:#f5e202" })</strong>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()


    </div>



</body>
</html>

